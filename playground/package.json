    "codemirror": "^5.65.8",
    "devicon": "^2.17.0",
    "ismobilejs": "^1.1.1",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@types/codemirror": "^5.60.16",
    "@types/eslint-plugin-mocha": "^10.4.0",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@types/pako": "^2.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-mocha": "^11.1.0",
    "http-server": "^14.1.1",
    "jsdom": "^27.0.0",
    "mocha": "^11.7.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
